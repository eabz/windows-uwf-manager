<Window x:Class="UwfManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows UWF Manager" Height="450" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#F3F3F3">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="UWF Manager" FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            
            <!-- Status Card -->
            <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Background="White" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="System Status" Foreground="#666666" FontSize="12" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Ellipse x:Name="StatusIndicator" Width="15" Height="15" Fill="Gray" Margin="0,0,10,0"/>
                        <TextBlock x:Name="StatusText" Text="Unknown" FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <Button x:Name="BtnToggle" Content="Lock System (Enable UWF)" 
                    Height="50" Click="BtnToggle_Click" 
                    Background="#007ACC" Foreground="White" FontWeight="Bold"
                    BorderThickness="0"/>
            
            <TextBlock Text="* Requires Restart to Apply Changes" 
                       FontSize="10" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5,0,0"/>

        </StackPanel>

        <!-- Log / Output -->
        <Border Grid.Row="2" BorderBrush="#DDDDDD" BorderThickness="1" Background="White" Height="100" Margin="0,20,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="TxtLog" Text="Ready..." Padding="5" FontFamily="Consolas" FontSize="12"/>
            </ScrollViewer>
        </Border>

        <!-- Restart Button overlay or separate? Let's add a restart button in the bottom area -->
        <Button Grid.Row="2" x:Name="BtnRestart" Content="Restart Now" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-40,0,0"
                Click="BtnRestart_Click" Visibility="Collapsed"/>
    </Grid>
</Window>
