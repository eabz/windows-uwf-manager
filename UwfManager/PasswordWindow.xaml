<Window x:Class="UwfManager.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Security Check" Height="200" Width="350"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F3F3F3">
    
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock x:Name="LblPrompt" Text="Enter Administrator Password:" 
                   FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
        
        <PasswordBox x:Name="TxtPassword" Height="30" Margin="0,0,0,20" 
                     VerticalContentAlignment="Center"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="80" Height="30" IsCancel="True" />
            <Button Content="Confirm" Width="80" Height="30" IsDefault="True" Click="BtnConfirm_Click" 
                    Background="#007ACC" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </StackPanel>
</Window>
